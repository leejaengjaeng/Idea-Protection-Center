<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ipc.dao.UserDao">
    <select id="getUserById" parameterType="String" resultType="com.ipc.vo.userVo">
        SELECT * FROM user where id = #{id}
    </select>
    <insert id="makeuser" parameterType="hashmap">
    	insert into user(id,pw,phone,email,addr1,addr2,addr3,role) values (#{id},#{pw},#{phone},#{email},#{addr1},#{addr2},#{addr3},#{role})
    </insert>
    <insert id="makelawyer" parameterType="String">
    	insert into patientent_lawyer(uid,license_scan_img,license_number) values (#{uid},#{license_scan_img},#{license_number})
    </insert>
    <select id = "checkid" parameterType="String" resultType="int">
    	SELECT count(*) FROM user WHERE id=#{id} limit 1
    </select>
</mapper>

